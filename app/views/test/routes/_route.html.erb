<%
label_color = 'success'
label_color = 'danger' if route.method.include?('DELETE')
label_color = 'info' if route.method.include?('PUT')
label_color = 'warning' if route.method.include?('POST')
%>
<div class="well" id="<%= route_counter %>">
  <div class="container-fluid">
    <div class="row">
      <h4 class="form-inline">
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><%= route.method %></div>
            <input type="text" class="form-control path" value=<%= route.path %>>
            <div class="input-group-addon btn btn-default request" data-method="<%= route.method %>" data-index="<%= route_counter %>">
              Go
            </div>
          </div>
        </div>
      </h4>
    </div>

    <!-- <% if route.path.include?(':')%>
    <div class="form-group">
