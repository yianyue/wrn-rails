        <label><%= route.path.split(':').last %></label>
        <input class="params form-control" name="<%= route.path.split(':').last %>" type="text" />
      </div>
    </div>
    <% end %> -->

    <% if !route.method.include?('GET') %>
    <div class="form-group">
      <label>Post Data</label>
      <textarea class="post-data form-control" type="text">
      </textarea>
    </div>
    <% end %>

    <div class="response"></div>
  </div>
</div>
